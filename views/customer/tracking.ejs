<div class="container-fluid my-5 d-sm-flex justify-content-center" style="
    background: transparent;
">
    <div class="card px-2" style="
    width: 80%;
    margin: 0px auto;
">
        <div class="row px-3">
            <div class="col">
                <ul id="progressbar">
                    <li class="step0 active " id="step1">PLACED</li>
                    <li class="step0 active text-center" id="step2">SHIPPED</li>
                    <li class="step0  text-muted text-right" id="step3" style="
    text-align: right;
">DELIVERED</li>
                </ul>
            </div>
        </div>

        <div class="card-header bg-white">
            <div class="row justify-content-between">
                <div class="col">
                    <p class="text-muted" style="
    font-weight: 500;
    font-size: 19px;
margin-bottom: 15px;
">Package Details: </p>
                    <div class="media flex-column flex-sm-row" style="
    box-shadow: 1px 3px 8px 5px #afaeae3b;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    border-bottom: 1px solid #80808054;
    padding-bottom: 10px;
    padding-left: 40px;
">
                        <div class="media-body ">
                            <h5 class="bold">

                                <%=customer.package %>
                            </h5>
                            <p class="text-muted">3443-22</p>

                            <p class="text-muted hide" style="
    display: none;
">Tracking Status on: <span class="Today"><%=customer.package %></span></p>

                        </div><img class="align-self-center img-fluid" src="https://png.pngtree.com/png-vector/20190115/ourmid/pngtree-vector-package-icon-png-image_319707.jpg" width="180 " height="180">
                    </div>

                    <p class="text-muted" style="
    font-size: 19px;
">Additional Information (From Sender): </p>



                    <div style="background: #f2f2f27a; padding: 20px; font-weight: 550;">
                        <%=customer.info %>
                    </div>
                    <hr>
                    <p class="text-muted" style="
    font-weight: bold;
    font-size: 19px;
">Package History: </p>
                </div>
                <div class="flex-col my-auto">

                </div>
            </div>
        </div>
        <div class="card-body">
            <% for( let t of trackings ){ %>




                <div class="media flex-column flex-sm-row" style="
    box-shadow: 1px 3px 8px 5px #afaeae3b;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    border-bottom: 1px solid #80808054;
padding: 20px;
    padding-bottom: 10px;
    padding-left: 30px;
">
                    <div class="media-body ">
                        <h5 class="bold">
                            <%=t.location %>
                        </h5>
                        <p class="text-muted">Arrival Time:</p>
                        <h4 class="mt-3 mb-4 bold"> <span class="mt-5 mr-5" style="
    margin-right: 10px;
"> <%=t.arrival_time %></span></h4>
                        <p class="text-muted hide" style="
    display: none;
">Tracking Status on: <span class="Today">11:30pm, Today</span></p>
                        <button type="button" class="btn  btn-outline-primary d-flex" style="
    display: none !important;
">Reached Hub, Delhi</button>
                    </div>

                    <% if(t.status == 'In Transit'){ %>

                        <div class="align-self-center img-fluid" width="180 " height="180" style="
    background: #02f70238;
    display: flex;
padding: 30px;
    align-items: center;
    justify-content: center;
    font-size: 20px;
">

                            In Transit
                        </div>
                        <%} else{ %>
                            <div class="align-self-center img-fluid" width="180 " height="180" style="
    background: #f7370238;
    display: flex;
    align-items: center;
    justify-content: center;
padding: 30px;
    font-size: 20px;
">

                                <%=t.status%>
                            </div>
                            <% } %>

                </div>


                <%
                    }
%>
        </div>

